<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ReelBox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReelBox"
    xmlns:videoSplitterResources="using:VideoSplitterPage.Resources"
    xmlns:mediaMixerResources="using:MediaTrackMixer.Resources"
    xmlns:imageTourResources="using:ImageTour.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="Resources/SplitDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/ConcatDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/TourDictionary.xaml"></ResourceDictionary>
                <videoSplitterResources:Templates/>
                <imageTourResources:Templates/>
                <mediaMixerResources:Template/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="MediumBackground" Color="AliceBlue"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="MediumBackground" Color="#262626"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
